<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DrugManufacturing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">DrugManufacturing</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @if (ViewBag.User != null)
            {
             <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Drug" asp-action="Personal">My drugs</a>
                    </li>
                    @if (ViewBag.User.Manufacturer != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Drug" asp-action="All">All drugs</a>
                        </li>
                    }
                    @if (ViewBag.User.Applicant != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Drug" asp-action="Create">Add drug</a>
                        </li>
                    }
                </ul>
                <div>
                    <a class="nav-link d-inline" href="#">@ViewBag.User.Email</a>
                    <a class="btn btn-outline-danger d-inline" asp-controller="User" asp-action="Logout">Logout</a>
                </div>
             </div>
            }
        </nav>
    </header>
    <div class="container mb-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - DrugManufacturing
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
